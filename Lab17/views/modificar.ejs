<%- include('includes/head.ejs', {nombreUsuario: nombreUsuario}) %>

<section class="container mt-6">
    <h2 class="is-size-4">Modificar productos</h2>
    <form action="/modificar/<%= producto[0].IDProducto %>" method="POST">
        <div class="field">
            <label class="label" for="nombre_producto">Nombre del producto</label>
            <div class="control">
              <input class="input" id="nombre_producto" name="nombre_producto" type="text" placeholder="Ingrese nombre del producto" value="<%= producto[0].nombre %>"> 
            </div>
          </div>
          <div class="field">
            <label class="label" for="precio_producto">Precio</label>
            <div class="control">
              <input class="input" id="precio_producto" name="precio_producto" type="number" placeholder="Ingrese precio del producto" value="<%= producto[0].precio %>">
            </div>
          </div>
          <div class="field">
            <label class="label" for="descripcion_producto">Descripción: </label>
            <div class="control">
              <input class="input" id="descripcion_producto" name="descripcion_producto" type="text" placeholder="Ingrese una descripción del producto" value="<%= producto[0].descripcion %>">
            </div>
          </div>
          <div class="field">
          <label class="label" for="imagen_producto">Url de la imagen</label>
          <div class="control">
            <input class="input" id="imagen_producto" name="imagen_producto" type="text" placeholder="Ingrese url de la imagen del producto" value="<%= producto[0].url %>">
          </div>
        </div>
          <div class="field is-grouped">
            <div class="control">
              <input class="button is-link" type="submit" value="Modificar">
            </div>
          </div>
    </form>
    </section>

<%- include('includes/foot.ejs') %>